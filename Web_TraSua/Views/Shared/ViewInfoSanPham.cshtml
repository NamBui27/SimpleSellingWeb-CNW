@model PagedList.IPagedList<Web_TraSua.Models.Entities.TraSua>
@using PagedList.Mvc;

@foreach (var item in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-6 product-men women_two">
        <div class="product-toys-info">
            <div class="men-pro-item">
                <div class="men-thumb-item">
                    <img src="~/Content/img/@item.anhts" class="img-thumbnail" alt="">
                    <div class="men-cart-pro">
                        <div class="inner-men-cart-pro">
                            <a href="/Home/Single/@item.mats" class="link-product-add-cart">Quick View</a>
                        </div>
                    </div>
                    <span class="product-new-top">New</span>
                </div>
                <div class="item-info-product">
                    <div class="info-product-price">
                        <div class="grid_meta">
                            <div class="product_price">
                                <h2>
                                    @item.tents
                                </h2>
                                <div class="grid-price mt-2">
                                    <ins> @item.dongia </ins>
                                </div>
                            </div>
                            <ul class="stars">
                                <li>
                                    <a href="#">
                                        <i class="fas fa-star"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="fas fa-star"></i>
                                    </a>
                                </li>
                                <li>
                                    <a href="#">
                                        <i class="far fa-star-half-o"></i>
                                    </a>
                                </li>
                            </ul>

                            <div class="toys single-item hvr-outline-out">
                                <form action="@Url.Action("Add","ShoppingCart",new { id = item.mats})" method="post">
                                    <input type="hidden" name="cmd" value="_cart">
                                    <input type="hidden" name="add" value="1">
                                    <input type="hidden" name="toys_item" value=@item.tents>
                                    <input type="hidden" name="amount" value=@item.dongia>
                                    <button type="submit" class="toys-cart ptoys-cart">
                                        <i class="fas fa-cart-plus"></i>
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>


}
<div>
    @Html.PagedListPager(Model, page => Url.Action("Products", new { page }))
</div>



