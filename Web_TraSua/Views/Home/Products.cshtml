        <div class="row">
            <div class="side-bar col-lg-3">

                <div class="border_box">
                    @{
                        ShoppingCart cart = (ShoppingCart)Session["cart"];
                        int total = 0;
                        double totalMoney = 0.0;
                        if (cart != null)
                        {
                            total = cart.GetTotal();
                            totalMoney = cart.GetTotalMoney();
                        }
                    }

                    <div class="shopping_cart">
                        <div class="title_box">Shopping cart</div>
                        <div class="cart_details">
                            @total sản phẩm <br />
                            <span class="border_cart"></span> Tổng tiền: <span class="price">@totalMoney VNĐ</span>
                        </div>
                        <div class="outs_more-buttn">
                            <a href="@Url.Action("Checkout", "Home")">Check Out</a>
                        </div>
                        <div class="cart_icon"><a href="/ShoppingCart/Cart"><img src="~/Content/images/" alt="" width="35" height="35" border="0" /></a></div>

                    </div>
                </div>

                <div class="search-hotel">
                    <h3 class="agileits-sear-head">Search Here..</h3>
                    <form action="/Home/SEARCH" method="post">
                        <input type="search" placeholder="Product name..." name="TENTS" required="">
                        <input type="submit" value=" ">
                    </form>
                </div>


                @using (Html.BeginForm("Filter", "Home", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-horizontal">
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.Label("Kích thước", htmlAttributes: new { @class = "control-label col-md-2" })
                            <div class="col-md-10">
                                @Html.TextBox("txtSize", size, htmlAttributes: new { @class = "form-control", @placeholder = "Kích thước có thể chọn là M hoặc L " })
                            </div>
                        </div>

